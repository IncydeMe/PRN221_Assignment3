<Window x:Class="Countdown_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Countdown_Timer"
        mc:Ignorable="d"
        Title="Countdown Timer" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtTimer" HorizontalAlignment="Center" Height="75" Margin="0,119,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Top" Width="650" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="40" FontFamily="Cascadia Mono" FontWeight="Bold" BorderBrush="White"/>
        <Button x:Name="btnStart" Content="Start Timer" HorizontalAlignment="Left" Margin="150,254,0,0" VerticalAlignment="Top" Height="50" Width="185" FontSize="24" FontWeight="Bold" Click="btnStart_Click"/>
        <Button x:Name="btnStop" Content="Stop Timer" HorizontalAlignment="Left" Margin="470,254,0,0" VerticalAlignment="Top" Height="50" Width="185" FontSize="24" FontWeight="Bold" Click="btnStop_Click"/>

    </Grid>
</Window>
